{
    "name": "colibri-vscode",
    "type": "dark",
    "colors": {
        "editor.background": "#3B224C",
        "editor.foreground": "#a4a0e8",
        "editorCursor.foreground": "#FFFFFF",
        "editor.lineHighlightBackground": "#452859",
        "editorLineNumber.foreground": "#716f94",
        "editor.selectionBackground": "#540099",
		"sideBar.background": "#281733",
        "editor.inactiveSelectionBackground": "#5e5d7a"
    },
    "tokenColors": [
        {
            "name": "Comments",
            "scope": [
                "comment",
                "punctuation.definition.comment"
            ],
            "settings": {
                "foreground": "#80888a"
            }
        },
        {
            "name": "Keywords",
            "scope": [
                "keyword"
            ],
            "settings": {
                "foreground": "#ECCDBA"
            }
        },
        {
            "name": "Strings",
            "scope": [
                "string"
            ],
            "settings": {
                "foreground": "#f0f0f0"
            }
        },
        {
            "name": "Functions",
            "scope": [
                "entity.name.function"
            ],
            "settings": {
                "foreground": "#f0f0f0"
            }
        },
        {
            "name": "Constants",
            "scope": [
                "constant.numeric",
                "constant.language",
                "constant.character",
                "constant.escape"
            ],
            "settings": {
                "foreground": "#9FF28F"
            }
        },
        {
            "name": "Variables",
            "scope": [
                "variable"
            ],
            "settings": {
                "foreground": "#9690D5"
            }
        },
		{
			"name": "Type Annotations",
			"scope": [
				"entity.name.type",
				"storage.type"
			],
			"settings": {
				"foreground": "#f0f0f0"
			}
		},		
        {
            "name": "HTML Tags",
            "scope": [
                "entity.name.tag",
                "meta.tag.sgml"
            ],
            "settings": {
                "foreground": "#EFBA5D"
            }
        },
        {
            "name": "Punctuation",
            "scope": [
                "punctuation",
                "punctuation.separator",
                "punctuation.terminator"
            ],
            "settings": {
                "foreground": "#b4b4b4"
            }
        },
        {
            "name": "Error",
            "scope": [
                "invalid"
            ],
            "settings": {
                "foreground": "#f47868",
                "fontStyle": "bold"
            }
        },
        {
            "name": "Warning",
            "scope": [
                "markup.changed"
            ],
            "settings": {
                "foreground": "#ffcd1c"
            }
        }
    ]
}
